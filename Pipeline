pipeline {
    agent any
    
    triggers {
        githubPush()
    }
    
    stages {
        stage('Build') {
            steps {
                echo 'Building the code with Maven...'
                bat 'mvn clean package'
            }
            post {
                success {
                    mail to: 'ajayofficial1998@gmail.com',
                         subject: 'Build Successful',
                         body: 'The build executed successfully...!'
                }
                failure {
                    mail to: 'ajayofficial1998@gmail.com',
                         subject: 'Build failed',
                         body: 'The build execution failed...!'
                }
            }
        }
        
        stage('Unit Test and Integration Test') {
            steps {
                echo 'Executing Unit Tests...'
                // Replace with actual test commands
                echo 'Unit test using Cucumber'

                echo 'Executing Integration Tests...'
                // Replace with actual test commands
                echo 'Integration test using Robot Framework'       
            }
            post {
                success {
                    mail to: 'ajayofficial1998@gmail.com',
                         subject: 'Unit Test and Integration Test Successful',
                         body: 'The tests executed successfully...!'
                }
                failure {
                    mail to: 'ajayofficial1998@gmail.com',
                         subject: 'Tests failed',
                         body: 'The test execution failed...!'
                }
            }
        }
        
        stage('Code Analysis') {
            steps {
                echo 'Integrating SonarQube Analysis...'
                // Replace with actual SonarQube commands
                echo 'Analyzing the code using SonarQube'
            }
        }
        
        stage('Security Scan') {
            steps {
                echo 'Performing Security Scan...'
                // Replace with actual security scan commands
                echo 'Security scanning using SonarQube'
            }
            post {
                success {
                    mail to: 'ajayofficial1998@gmail.com',
                         subject: 'Security Scan Successful',
                         body: 'The security scan executed successfully...!'
                }
                failure {
                    mail to: 'ajayofficial1998@gmail.com',
                         subject: 'Security Scan failed',
                         body: 'The security scan execution failed...!'
                }
            }
        }
        
        stage('Deploy to Staging') {
            steps {
                echo 'Deploying to the staging environment using AWS EC2 instance...'
                // Replace with actual deployment commands
                echo 'Deploying to the staging server'
            }
        }
        
        stage('Integration Tests on Staging') {
            steps {
                echo 'Running Integration Tests on Staging server...'
                // Replace with actual test commands
                echo 'Integration test using Postman'
            }
        }
        
        stage('Deploy to Production') {
            steps {
                echo 'Deploying application to the Production environment...'
                // Replace with actual deployment commands
                echo 'Deploying application using AWS EC2 instance'
            }
        }
    }
    
    post {
        always {
            echo 'Sending Email Notification'
            emailext(
                subject: 'Pipeline Status: ${currentBuild.result}',
                body: 'The pipeline execution resulted in ${currentBuild.result}.',
                to: 'ajayofficial1998@gmail.com',
                attachLog: true
            )
        }
    }
}
