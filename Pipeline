pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/ajayofficial1998/Jenkins_Ajay.git'
            }
        }
        stage('Build') {
            steps {
                echo 'Building the code...!'
                echo 'Compiling the code and generating artifacts'
            }
        }
        stage('Unit and Integration Tests') {
            steps {
                echo 'Execute the Unit Test...!'
                echo 'Unit test using Cucumber'
                echo 'Execute the Integration Test...!'
                echo 'Integration test using Robot Framework'
            }
            post {
                always {
                    emailext (
                        subject: "Unit and Integration Tests: Build ${currentBuild.fullDisplayName}",
                        body: "Unit and Integration Tests completed. See the Jenkins build details at: ${env.BUILD_URL}",
                        to: 'ajayofficial1998@gmail.com',
                        attachLog: true
                    )
                }
            }
        }
        stage('Code Analysis') {
            steps {
                echo 'Integrate SonarQube Analysis...!'
                echo 'Analyzing the code using SonarQube'
            }
            post {
                always {
                    emailext (
                        subject: "Code Analysis: Build ${currentBuild.fullDisplayName}",
                        body: "Code Analysis completed. See the Jenkins build details at: ${env.BUILD_URL}",
                        to: 'ajayofficial1998@gmail.com',
                        attachLog: true
                    )
                }
            }
        }
        stage('Security Scan') {
            steps {
                echo 'Perform Security Scan...!'
                echo 'Security Scanning using SonarQube'
            }
            post {
                always {
                    emailext (
                        subject: "Security Scan: Build ${currentBuild.fullDisplayName}",
                        body: "Security Scan completed. See the Jenkins build details at: ${env.BUILD_URL}",
                        to: 'ajayofficial1998@gmail.com',
                        attachLog: true
                    )
                }
            }
        }
        stage('Deploy to Staging') {
            steps {
                echo 'Deploy to the staging using AWS EC2 instance...!'
                echo 'Deploying it to the staging server'
            }
            post {
                always {
                    emailext (
                        subject: "Deploy to Staging: Build ${currentBuild.fullDisplayName}",
                        body: "Deploy to Staging completed. See the Jenkins build details at: ${env.BUILD_URL}",
                        to: 'ajayofficial1998@gmail.com',
                        attachLog: true
                    )
                }
            }
        }
        stage('Integration Tests on Staging') {
            steps {
                echo 'Run the Integration Test on Staging server...!'
                echo 'Staging of integration test using Postman'
            }
            post {
                always {
                    emailext (
                        subject: "Integration Tests on Staging: Build ${currentBuild.fullDisplayName}",
                        body: "Integration Tests on Staging completed. See the Jenkins build details at: ${env.BUILD_URL}",
                        to: 'ajayofficial1998@gmail.com',
                        attachLog: true
                    )
                }
            }
        }
        stage('Deploy to Production') {
            steps {
                echo 'Application deployment to the Production environment...!'
                echo 'Application Deployment using AWS EC2 instance'
            }
            post {
                always {
                    emailext (
                        subject: "Deploy to Production: Build ${currentBuild.fullDisplayName}",
                        body: "Deploy to Production completed. See the Jenkins build details at: ${env.BUILD_URL}",
                        to: 'ajayofficial1998@gmail.com',
                        attachLog: true
                    )
                }
            }
        }
    }
    post {
        always {
            emailext (
                subject: "Build ${currentBuild.fullDisplayName} Completed",
                body: "Build completed. See the Jenkins build details at: ${env.BUILD_URL}",
                to: 'ajayofficial1998@gmail.com',
                attachLog: true
            )
        }
    }
}
