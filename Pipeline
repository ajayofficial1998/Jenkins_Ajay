pipeline {
    agent any

    environment {
        CODE_DIRECTORY = "/path/to/code"
        TEST_ENV = "testing"
        PROD_ENV = "yourname_production"
        NOTIFICATION_EMAIL = "ajayofficial1998@gmail.com"
    }

    stages {
        stage('Build') {
            steps {
                echo "Build using the code from: $CODE_DIRECTORY"
                echo "Code running"
               
            }
        }
        stage('Unit and Integration Tests') {
            steps {
                echo "Execute the unit tests"
                echo "Execute of integration tests"
              
            }
            post {
                success {
                    mail to: "${env.NOTIFICATION_EMAIL}",
                         subject: "Unit and Integration Tests zre SUCCESSFUL",
                         body: "Testing executed successfully. See attached logs for details.<br>Console Output: ${env.BUILD_URL}console",
                         mimeType: 'text/html'
                }
                failure {
                    mail to: "${env.NOTIFICATION_EMAIL}",
                         subject: "Tests Failed",
                         body: Test execution failed. See attached logs for details.<br>Console Output: ${env.BUILD_URL}console",
                         mimeType: 'text/html'
                }
            }
        }
        stage('Code Analysis') {
            steps {
                echo "Integrating the code analysis"
               
            }
        }
        stage('Security Scan') {
            steps {
                echo "Security Scanning"
              
            }
            post {
                success {
                    mail to: "${env.NOTIFICATION_EMAIL}",
                         subject: "Security Scan SUCCESSFUL",
                         body: "Security scan executed successfully. See attached logs for details.<br>Console Output: ${env.BUILD_URL}console",
                         mimeType: 'text/html'
                }
                failure {
                    mail to: "${env.NOTIFICATION_EMAIL}",
                         subject: "Security Scan Failed",
                         body: "Security scan execution failed. See attached logs for details.<br>Console Output: ${env.BUILD_URL}console",
                         mimeType: 'text/html'
                }
            }
        }
        stage('Deploy to Staging') {
            steps {
                echo "Deploying the application to the server $TEST_ENV environment"
                
            }
        }
        stage('Integration Tests on Staging') {
            steps {
                echo "Run the integration test on stagimg server"

            }
        }
        stage('Deploy to Production') {
            steps {
                echo "Application deployment to the $PROD_ENV environment"
               
            }
        }
    }

    post {
        always {
            emailext (
                subject: "Pipeline Successfull: ${currentBuild.result}",
                body: '''<html>
                    <body>
                    <p>Build Log: ${currentBuild.result}</p>
                    <p>Console Output: <a href="${env.BUILD_URL}console">${env.BUILD_URL}console</a></p>
                    </body>
                    </html>''',
                to: 'ajayofficial1998@gmail.com',
                from: 'jenkins@example.com',
                replyTo: 'jenkins@example.com',
                mimeType: 'text/html'
            )
        }
    }
}
