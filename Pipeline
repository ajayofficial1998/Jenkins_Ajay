pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Build the code by Maven...!'
                echo 'mvn clean package'     
            }
            post {
                success {
                    mail to: 'ajayofficial1998@gmail.com',
                    subject: 'Build Successful',
                    body: 'The build executed successfully...!'
                }
                failure {
                    mail to: 'ajayofficial1998@gmail.com',
                    subject: 'Build failed',
                    body: 'The build execution was failed...!'
                }
            }
        }
        
        // other stages...
    }
    
    post {
        always {
            mail to: 'ajayofficial1998@gmail.com',
            subject: 'Pipeline Succeeded',
            body: 'The pipeline execution was success and build log attached...!',
            attachLog: true
        }
        failure {
            mail to: 'ajayofficial1998@gmail.com',
            subject: 'Pipeline failed',
            body: 'The pipeline execution was failed...!'
        }
    }
}
