pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out the codes from the repository'
                checkout([$class: 'GitSCM', branches: [[name: '*/main']],
                    userRemoteConfigs: [[url: 'https://github.com/ajayofficial1998/Jenkins_Ajay.git']]])
            }
        }
        stage('Build') {
            steps {
                echo 'Building the code with Maven...!'
                echo 'mvn clean package'
            }
        }
        stage('Unit Test and Integration Test') {
            steps {
                echo 'Executing Unit Test...!'
                echo 'Unit test using Cucumber'
                echo 'Executing Integration Test...!'
                echo 'Integration test using Robot Framework'
            }
            post {
                success {
                    emailext to: 'ajayofficial1998@gmail.com',
                        subject: 'Unit Test and Integration Test Successful',
                        body: 'The testing executed successfully...!'
                }
                failure {
                    emailext to: 'ajayofficial1998@gmail.com',
                        subject: 'Tests Failed',
                        body: 'The test execution failed...!'
                }
            }
        }
        stage('Code Analysis') {
            steps {
                echo 'Integrating SonarQube Analysis...!'
                echo 'Analyzing the code using SonarQube'
            }
        }
        stage('Security Scan') {
            steps {
                echo 'Performing Security Scan...!'
                echo 'Security Scanning using SonarQube'
            }
            post {
                success {
                    emailext to: 'ajayofficial1998@gmail.com',
                        subject: 'Security Scan Successful',
                        body: 'The security scan executed successfully...!'
                }
                failure {
                    emailext to: 'ajayofficial1998@gmail.com',
                        subject: 'Security Scan Failed',
                        body: 'The Security scan execution failed...!'
                }
            }
        }
        stage('Deploy to Staging') {
            steps {
                echo 'Deploying to staging using AWS EC2 instance...!'
                echo 'Deploying to the staging server'
            }
        }
        stage('Integration Tests on Staging') {
            steps {
                echo 'Running Integration Test on Staging server...!'
                echo 'Staging integration test using Postman'
            }
        }
        stage('Deploy to Production') {
            steps {
                echo 'Deploying application to Production environment...!'
                echo 'Deploying application using AWS EC2 instance'
            }
        }
    }
    post {
        always {
            echo 'Sending notification'
            emailext subject: "Pipeline ${currentBuild.result}",
                body: 'The pipeline executed successfully...! ${currentBuild.result}',
                to: 'specified-email@example.com',
                attachLog: true
        }
    }
}
